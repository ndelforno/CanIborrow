<div class="reservations_done">
  <h1>reservations Booked:</h1>
<% @reservations_done.each do |res| %>
  <div class="reservation_done">
    <h4><%= res.tool.name %></h4>
    <p>Material's owner: <%= link_to "#{res.tool.user.full_name}", "/users/#{res.tool.user.id}" %></p>
    <p>From: <%= res.reservation_time_start.strftime("%m/%d/%Y") %>
    To: <%= res.reservation_time_end.strftime("%m/%d/%Y") %>
    </p>
    <p>Material's Address: <%= res.tool.address %></p>
    <p>Status: <%= res.status %></p>
    <p>Days: <%= res.numbers_of_days %></p>
    <p>Price <%= res.tool.price %> $/day</p>
    <p> Total Price: <%= res.numbers_of_days * res.tool.price %> CAD$ </p>
    <%= link_to "Cancel this Reservation", "/tools/#{res.tool.id}/reservations/#{res.id}", method: :delete, class: "btn btn-danger btn-md", id: "delete_button"%>
  </div>
  <hr>
<% end %>
</div>
