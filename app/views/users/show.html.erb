<h2><%= @user.first_name %></h2>
<p><%= @user.email %></p>
<hr>
<h3>Location:</h3>
<p><%= @user.address %></p>
<% if current_user == @user %>
  <p><%= link_to 'Edit your profile', edit_user_path, class: "btn btn-warning"  %></p>
<% end %>
<hr>
<h2>Current Postings:</h2>
<div class="row">
  <% @user.tools.each do |tool|%>
    <div class="card">
      <div class="card-body d-flex flex-column" style="width: 18rem;">
        <h2 class="card-title"><%= tool.name %></h2>
        <h4><%= tool.price  %>$/day</h4>
        <p class="card-text"><%= tool.description %></p>
        <p><%= tool.address %></p>
        <a href=<%= "/tools/#{tool.id}"%> class="btn btn-primary btn-block mt-auto">See posting</a>
      </div>
    </div>
  <% end  %>
</div>
