<h2><%= @user.first_name %></h2>
<p><%= @user.email %></p>
<h3>Location:</h3>
<p><%= @user.address %></p>
<% if current_user == @user %>
  <p><%= link_to 'Edit your profile', edit_user_path  %></p>
<% end %>

<h2>Current Postings:</h2>
<div class="row">
  <% @user.tools.each do |tool|%>
    <div class="card">
      <div class="card-body" style="width: 18rem;">
        <h1 class="card-title"><%= tool.name %> - <%= tool.price  %>$/hour</h1>
        <p class="card-text"><%= tool.description %></p>
        <p><%= tool.address %></p>
        <p>User: <%= tool.user.first_name %></p>
        <a href=<%= "/tools/#{tool.id}"%> class="btn btn-primary">See posting</a>
      </div>
    </div>
  <% end  %>
</div>

<% if current_user == @user %>
  <h2>Reservations pending for your tools:</h2>
  <div class= "pending_res">
    <% @user.tools.each do |tool| %>
      <% tool.reservations.each do |res|  %>
        <h2><%= res.tool.name %></h2>
        <p>From: <%= res.reservation_time_start %></p>
        <p>To: <%= res.reservation_time_end %></p>
        <p><%= res.user.full_name %></p>
        <p><%= link_to 'Accept', "/tools/#{tool.id}/reservations/#{res.id}?status=accepted" , method: :put %> - <%= link_to 'Decline' %></p>
      <% end %>
    <% end %>
  </div>
  <div class="accepted_res">
    <h2>Reservations accepted for your tools:</h2>
  </div>
<% end  %>
