<h1>Tools index</h1>

  <% @tools.each do |tool|%>
  <div class="tool">
    <h1><%= tool.name %></h1>
    <p><%= tool.description %></p>
    <p><%= tool.price  %>$/hour</p>
    <p><%= tool.address %></p>
    <p><%= tool.user.first_name %></p>
    <p><%= link_to 'see tool', tool_path(tool) %></p>
  </div>
  <% end  %>
