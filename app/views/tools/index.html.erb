

  <div class="row">
    <% @tools.each do |tool|%>
      <div class="card">
        <div class="card-body" style="width: 18rem;">
          <h1 class="card-title"><%= tool.name %> - <%= tool.price  %>$/hour</h1>
          <p class="card-text"><%= tool.description %></p>
          <p><%= tool.address %></p>
          <p>User: <%= tool.user.first_name %></p>
          <a href=<%= "/tools/#{tool.id}"%> class="btn btn-primary">See posting</a>
        </div>
      </div>
    <% end  %>
  </div>

  <div id="mapindex">

  </div>
