<div class="show">
    <div class="column1">
      <div class="show_tool card-body">
        <h1 class="card-title"><%= @tool.name  %> </h1>
        <h2>Price : <%= @tool.price  %>$ /day </h2>
        <h4 id="description">Description:</h4>
        <p class="card-text"><%= @tool.description %></p>
        <h4 id="address">Material's Address:</h4>
        <p class="toolAddress"><%= @tool.address %></p>
        <p id="user_info">User: <%=link_to( "#{@tool.user.full_name}", user_path(@tool.user) )%></p>
        <% if current_user == @tool.user %>
          <div class="user_option">
          <%= link_to "Edit your Material", edit_tool_path(@tool), class:"btn btn-warning btn-md", id: "edit_button" %>
          <%= link_to "Remove this Material", tool_path, method: :delete, class:"btn btn-warning btn-md", id: "delete_button"%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="column2">
      <div class="" id="mapid" >

      </div>
    </div>
    <div class="column3">
      <h2>Borrow this tool:</h2>

      <% if current_user %>
        <%= render partial: 'reservations/form', locals: {tool: @tool, reservation: @reservation} %>
      <% else %>
        <p>if you want to borrow this tools, please <%= link_to 'Log In', new_session_path %></p>
      <% end %>
    </div>
</div>
