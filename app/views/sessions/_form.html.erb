

<%= form_tag sessions_path, :method => :post do %>


<div class="user_login modal">
  <button type="button" class="close">x</button>
  <div class="form-group">
    <label for="email">Email address</label>
    <%= text_field_tag(:email,"",:required => true, class: 'form-control', placeholder:"name@example.com") %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <%= password_field_tag(:password,"",:required => true, class: 'form-control') %>
  </div>
  <% if flash[:notice] %>
    <div class="alert alert-danger"><%=flash[:notice] %></div>
  <% end %>
  <div class="form-group">
    <%= submit_tag("Login",class:"btn btn-primary") %>
  </div>
</div>
<% end %>
